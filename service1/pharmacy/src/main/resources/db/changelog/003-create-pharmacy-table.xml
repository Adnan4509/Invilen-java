<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="003" author="adnan">

        <createTable tableName="medicine">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>


            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>

            <column name="brand" type="text"/>

            <column name="dosage" type="text"/>

            <column name="available_quantity" type="float8"/>

            <column name="price" type="numeric(10,2)">
                <constraints nullable="false"/>
            </column>

            <column name="category_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_medicine_category"
                             referencedTableName="category"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="medicine"/>
        </rollback>

    </changeSet>

</databaseChangeLog>
